<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CITSProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 기본 애플리케이션 테마입니다. -->

        <!-- 기본 브랜드 색상. -->
        <item name="colorPrimary">#FFA500</item> <!-- 주요 브랜드 색상 -->
        <item name="colorPrimaryVariant">#000</item> <!-- 주요 브랜드 색상 변형 -->
        <item name="colorOnPrimary">@color/white</item> <!-- 주요 브랜드 색상 텍스트 색상 -->

        <!-- 보조 브랜드 색상. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- 보조 브랜드 색상 -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- 보조 브랜드 색상 변형 -->
        <item name="colorOnSecondary">@color/black</item> <!-- 보조 브랜드 색상 텍스트 색상 -->

        <!-- 상태 표시줄 색상. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- 상태 표시줄 색상은 주요 브랜드 색상 변형과 연동됨 -->

        <!-- 테마를 여기에서 사용자 정의할 수 있습니다. -->
    </style>

    <style name="Theme.CITSProject.NoActionBar">
        <item name="windowActionBar">false</item> <!-- 액션바를 사용하지 않음 -->
        <item name="windowNoTitle">true</item> <!-- 타이틀 바를 사용하지 않음 -->
    </style>

    <style name="Theme.CITSProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- 앱 바를 오버레이하는 스타일. 앱 바에 어두운 배경을 적용합니다. -->

    <style name="Theme.CITSProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 팝업을 오버레이하는 스타일. 밝은 배경을 사용하여 팝업을 감쌉니다. -->
</resources>
